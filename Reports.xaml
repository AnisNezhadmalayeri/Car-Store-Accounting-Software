            <materialDesign:PackIcon
                Kind="Delete"
                Height="24"
                Width="24" />
        </Button>
        <Button
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
            ToolTip="MaterialDesignFloatingActionMiniLightButton" Margin="501,53,27.2,574.2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF007ACC" Click="Button_Click" Height="Auto" Width="Auto" >
            <materialDesign:PackIcon
                Kind="Update"
                Height="24"
                Width="24" />
        </Button>
        <Button
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
            ToolTip="MaterialDesignFloatingActionMiniLightButton" Margin="9.8,53,519.2,574.2" Foreground="#FF50B84A" BorderBrush="{x:Null}" Background="Black" Click="Button_Click_2" Height="Auto" Width="Auto" Grid.Column="1" >
            <materialDesign:PackIcon
                Kind="Edit"
                Height="24"
                Width="24" />
        </Button>
        <Button
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
            ToolTip="MaterialDesignFloatingActionMiniLightButton" Margin="87.8,54,440.2,573.2" Foreground="#FF50B84A" BorderBrush="{x:Null}" Background="Black" Click="Button_Click_3" Height="Auto" Width="Auto" Grid.Column="1"  >
            <materialDesign:PackIcon
                Kind="Plus"
                Height="24"
                Width="24" Foreground="White" />
        </Button>

    </Grid>
</Page>
